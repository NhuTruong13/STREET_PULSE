<div class= "container">
  <p>Your Review Is Precious For The Others!!!</p>
  <%= simple_form_for [@search, @review] do |f| %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <p> <%= f.input :street_review_average_rating, collection: 0..10, :label => "Your general appreciation of the street" %> </p>
      <p> <%= f.input :commune_review_average_rating, collection: 0..10, :label => "Your appreciation of the commune" %> </p>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div style="display: flex; margin:15px;">
        <div style="width: 50%; padding:15px;">
          <h5>Your review regarding the street</h5>
          <p> <%= f.input :street_review_title, :label => "Review Title" %> </p>
          <p> <%= f.input :street_review_content, :label => "Your Review" %> </p>

        </div>
        <div style="width: 50%; padding:15px;">
          <h5>Your review regarding the commune</h5>
          <p> <%= f.input :commune_review_title, :label => "Review Title" %> </p>
          <p> <%= f.input :commune_review_content, :label => "Your Review" %> </p>

        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    </div>
  </div>

  >
  <%= f.button :submit, class: "" %>
  <% end  %>
</div>
</div>
</div>
